.nav-container {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background: -webkit-linear-gradient(var(--system-theme), var(--system-theme), #fff);
}
.nav-container .status-bar {
  width: 100%;
}
.nav-container .nav-bar {
  width: 100%;
  display: table-cell;
  vertical-align: middle;
}
.nav-container .nav-bar .nav-name-text {
  margin-left: 20rpx;
  font-weight: 700;
}
