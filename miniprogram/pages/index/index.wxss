.container .user-authorize {
  padding: 20rpx;
  padding-bottom: 100rpx;
}
.container .user-authorize .user-authorize-title {
  font-size: 36rpx;
  line-height: 1rem;
  margin-bottom: 40rpx;
  display: flex;
}
.container .user-authorize .user-authorize-title::before {
  content: '';
  width: 10rpx;
  height: 1rem;
  margin-right: 10rpx;
  background-color: var(--system-theme);
}
.container .user-authorize .avatar-wrapper {
  margin: auto;
  margin-bottom: 40rpx;
  padding: 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 1;
}
.container .user-authorize .avatar-wrapper .user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-image: var(--normal-avatar);
  background-repeat: no-repeat;
  background-size: cover;
}
.container .user-authorize .user-nickname {
  display: flex;
  padding: 10px 0;
  border: 1px solid var(--border-color-base);
  border-right: none;
  border-left: none;
}
.container .user-authorize .user-nickname .user-nickname-label {
  width: 200rpx;
}
